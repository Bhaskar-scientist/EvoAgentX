# EvoAgentX Tools Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=EvoAgentX
DEBUG=True
API_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# Search Tool API Keys
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Docker Interpreter Settings (optional)
DEFAULT_DOCKER_IMAGE=fundingsocietiesdocker/python3.9-slim
DOCKER_CONTAINER_DIR=/home/app/

# Python Interpreter Settings (optional)
# Comma-separated list of allowed imports (leave empty for default security restrictions)
ALLOWED_PYTHON_IMPORTS=math,numpy,pandas,os,sys 